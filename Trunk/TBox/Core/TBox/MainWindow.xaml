<Dialogs:DialogWindow x:Class="TBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
                      xmlns:components="clr-namespace:WPFControls.Components;assembly=WPFControls" 
        Title="TBox - Settings" 
        Icon="/TBox;component/Resources/Icon.ico" 
        Width="720" Height="540" 
        MinWidth="720" MinHeight="540" 
        WindowState="Normal" ShowInTaskbar="True">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="10">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <Button Content="Fast Start"  Name="btnFastStart" Width="80" Margin="5" Click="BtnFastStartClick" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" >
                <Button Content="Save"  Name="btnSave" Width="64" Margin="5" Click="BtnSaveClick" />
                <Button Content="Reload" Name="btnReload" Width="64" Margin="5" IsCancel="True" Click="BtnReloadClick" />
                <Button Content="Close" Name="btnClose" Width="64" Margin="5" IsDefault="True" Click="BtnCloseClick" />
            </StackPanel>
            <Label/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Label Content="Plugins list:" DockPanel.Dock="Top" Padding="5,0"/>
            <components:ExtListBox  Name="PluginsNames" Width="128" Margin="5,0,5,5" />
        </DockPanel>
        <ContentControl Name="PluginsBack"/>
    </DockPanel>
</Dialogs:DialogWindow>
