<UserControl x:Class="TBox.Forms.FastStartDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:TBox.Code.Localization"
             xmlns:buttonsView="clr-namespace:WPFControls.Components.ButtonsView;assembly=WPFControls"
             >
    <DockPanel>
        <TabControl>
            <TabItem Header="{loc:Translate RecentActions}" >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <buttonsView:GroupedList x:Name="RecentActions"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{loc:Translate UserActions}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <buttonsView:GroupedList x:Name="UserActions"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
