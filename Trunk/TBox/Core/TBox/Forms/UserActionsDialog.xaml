<dialogs:DialogWindow x:Class="TBox.Forms.UserActionsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:loc="clr-namespace:TBox.Code.Localization"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                     xmlns:dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
                      xmlns:Units="clr-namespace:WPFControls.Components.Units;assembly=WPFControls"
                      mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             WindowStartupLocation="CenterOwner" 
             Width="400" Height="400" MinWidth="400" MinHeight="400"
             WindowStyle="ToolWindow" 
             Title="{Binding Key}">
    <DockPanel>
        <Button Content="{loc:Translate BtnClose}" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Padding="5,0" Margin="10" IsCancel="True" IsDefault="True"/>
        <Units:CheckableListBoxUnit Name="Pathes" />
    </DockPanel>
</dialogs:DialogWindow>
