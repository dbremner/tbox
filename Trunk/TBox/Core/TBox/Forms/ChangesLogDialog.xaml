<dialogs:DialogWindow x:Class="TBox.Forms.ChangesLogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                     xmlns:dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
                                     Title="TBox was updated, the latest changes:" 
        Height="300" Width="300" MinHeight="300" MinWidth="300" 
        ShowInTaskbar="True" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Content="Close" HorizontalAlignment="Right" Margin="10" Padding="4" IsCancel="True" Click="CloseClick"/>
        </StackPanel>
        <TextBox Name="Message" Margin="5" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </DockPanel>
</dialogs:DialogWindow>
