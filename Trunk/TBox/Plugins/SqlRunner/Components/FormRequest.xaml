<Dialogs:DialogWindow 
             x:Class="SqlRunner.Components.FormRequest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
             xmlns:sh="clr-namespace:WPFSyntaxHighlighter;assembly=WPFSyntaxHighlighter"
             mc:Ignorable="d" 
             Width="500" Height="500" MinWidth="500" MinHeight="500"
             WindowStyle="ToolWindow" Title="{Binding Key}"
            >
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <Button Name="btnTest" Content="Test" Margin="10" Width="48" Click="BtnTestClick" IsDefault="True"/>
            <Button Content="Cancel" Margin="10" Width="48" Click="CancelClick" IsCancel="True"/>
        </StackPanel>
        <TabControl Name="Tabs">
            <TabItem Header="Request">
                <sh:SyntaxHighlighter Value="{Binding Command}" Format="mssql"/>
            </TabItem>
            <TabItem Header="Response">
                <sh:SyntaxHighlighter Name="Response" IsReadOnly="True" Format="mssql"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Dialogs:DialogWindow>
