<dialogs:DialogWindow x:Class="Requestor.Components.RequestDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:loc="clr-namespace:Requestor.Code.Localization"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                     xmlns:dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
                      xmlns:controls="clr-namespace:PluginsShared.Controls;assembly=PluginsShared"
                      mc:Ignorable="d"
             ShowInTaskbar="True"
             MinWidth="480" MinHeight="320"
             Width="480" Height="320"
            d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button Content="{loc:Tr Close}" Margin="5" Width="64" IsCancel="True" Click="ButtonCloseClick"/>
        </StackPanel>
        <controls:ResponseBox Name="Info"/>
    </DockPanel>
</dialogs:DialogWindow>
