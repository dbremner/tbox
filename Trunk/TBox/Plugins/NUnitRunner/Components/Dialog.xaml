<dialogs:DialogWindow x:Class="NUnitRunner.Components.Dialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
                      xmlns:controls="clr-namespace:WPFControls.Controls;assembly=WPFControls"
                      xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned;assembly=WPFControls"
                      xmlns:components="clr-namespace:NUnitRunner.Components"
                      mc:Ignorable="d" 
             ShowInTaskbar="True" WindowStartupLocation="CenterOwner"
             Width="900" Height="480"
             MinWidth="900" MinHeight="480">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="15" Orientation="Horizontal" >
            <Button Content="Refresh" Margin="5" Padding="5,0" Width="70" Click="RefreshClick"/>
            <Button Content="Start" Margin="5" Padding="5,0" Width="70" IsDefault="True" Click="StartClick"/>
            <Button Content="Cancel" Margin="5" Padding="5,0" Width="70" IsCancel="True" Click="CancelClick"/>
        </StackPanel>
        <DockPanel DockPanel.Dock="Left">
            <StackPanel VerticalAlignment="Top" >
                <GroupBox Margin="5" Header="View">
                    <controls:ExtCheckBox Name="Filter" IsChecked="{Binding OnlyFailed}" Content="Show only failed tests" ValueChanged="FilterChanged" Margin="2" />
                </GroupBox>
                <GroupBox Margin="5" Header="Configuration">
                    <StackPanel >
                        <controls:ExtCheckBox Content="Synchronize tests agents" IsChecked="{Binding NeedSynchronizationForTests}" Margin="2"/>
                        <controls:ExtCheckBox Content="Run as x86" IsChecked="{Binding RunAsx86}" Margin="2"/>
                        <controls:ExtCheckBox Content="Run as Admin" IsChecked="{Binding RunAsAdmin}" Margin="2"/>
                        <captioned:CaptionedEditPath Caption="Command to run before tests" Value="{Binding CommandBeforeTestsRun}" PathGetterType="File" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Margin="5" Header="Clonning">
                     <StackPanel >
                        <controls:ExtCheckBox Name="CopyToSeparateFolders" IsChecked="{Binding CopyToSeparateFolders}" Content="Copy to separate folders"  Margin="2" />
                        <captioned:CaptionedEditPath Caption="Folder to clone tests" Value="{Binding DirToCloneTests}" PathGetterType="Folder" IsEnabled="{Binding ElementName=CopyToSeparateFolders, Path=IsChecked}"/>
                        <captioned:CaptionedNumericUpDown Name="CopyDeep" Caption="Copy deep" Value="{Binding CopyDeep}" IsEnabled="{Binding ElementName=CopyToSeparateFolders, Path=IsChecked}" Minimum="1" Maximum="64"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Margin="5" Header="Multithreading">
                    <captioned:CaptionedNumericUpDown Name="ProcessCount" Caption="Process count" Value="{Binding ProcessCount}" Minimum="1" Maximum="16"/>
                </GroupBox>
            </StackPanel>
        </DockPanel>
        <DockPanel Name="Panel" />
    </DockPanel>
</dialogs:DialogWindow>
