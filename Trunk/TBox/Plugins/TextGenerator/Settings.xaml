<UserControl x:Class="Mnk.TBox.Plugins.TextGenerator.Settings"
             xmlns:loc="clr-namespace:Mnk.TBox.Plugins.TextGenerator.Code.Localization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             >
    <TabControl>
        <TabItem Header="{loc:Tr Settings}">
            <StackPanel>
                <GroupBox Header="{loc:Tr TextReplacing}" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{loc:Tr CharToFillWhenYouCreateTable}"/>
                        <TextBox Margin="5" MaxLength="1" Text="{Binding Fill}" Width="24"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>