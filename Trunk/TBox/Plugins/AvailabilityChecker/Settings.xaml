<UserControl x:Class="AvailabilityChecker.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned;assembly=WPFControls"
             xmlns:units="clr-namespace:WPFControls.Components.Units;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <captioned:CaptionedNumericUpDown Caption="Check interval:" Value="{Binding CheckInterval}" Minimum="1" Maximum="86400" Margin="1" DockPanel.Dock="Top"/>
        <Label Content="Web sites urls and local shares to test:" Margin="0" Padding="0" HorizontalAlignment="Center" DockPanel.Dock="Top"/>
        <units:CheckableListBoxUnit UnitType="Text" Title="Specify resource url" ItemsSource="{Binding Items}"/>
    </DockPanel>
</UserControl>
