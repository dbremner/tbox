<dialogs:DialogWindow x:Class="Templates.Components.FileDialog"
             xmlns:loc="clr-namespace:Templates.Code.Localization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:WPFControls.Dialogs;assembly=WPFControls"
             xmlns:components="clr-namespace:WPFControls.Components;assembly=WPFControls"
             xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned;assembly=WPFControls"
             mc:Ignorable="d" 
             MinWidth="480" MinHeight="320"
             Width="480" Height="320"
             ShowInTaskbar="True">
    <DockPanel>
        <captioned:CaptionedEditPath Name="TargetPath" Caption="{loc:Tr TargetPath}" Margin="5" DockPanel.Dock="Top" ValueChanged="TargetPathValueChanged"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Name="FillButton" Content="{loc:Tr FillTemplate}" Padding="5,0" Margin="10" Click="FillTemplateClick" IsDefault="True"/>
            <Button Content="{loc:Tr Cancel}" Width="64" DockPanel.Dock="Bottom" Margin="10" Click="CancelClick" IsCancel="True"/>
        </StackPanel>
        <Label Content="{loc:Tr KnownValues}" DockPanel.Dock="Top" Padding="5,5,5,0"/>
        <components:ExtListBox Name="Options" Margin="5,0,5,5">
            <components:ExtListBox.ItemTemplate>
                <DataTemplate >
                    <StackPanel Margin="0,5">
                        <TextBlock Text="{Binding Key}" Padding="0" FontWeight="Bold" />
                        <TextBox Text="{Binding Value}" Padding="0" />
                    </StackPanel>
                </DataTemplate>
            </components:ExtListBox.ItemTemplate>
        </components:ExtListBox>
    </DockPanel>
</dialogs:DialogWindow>
