<UserControl x:Class="LeaksInterceptor.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:WPFControls.Controls;assembly=WPFControls"
             xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl>
        <TabItem Header="Configure timers">
            <StackPanel>
                <GroupBox Header="Refresh intervals">
                    <WrapPanel >
                        <captioned:CaptionedNumericUpDown Caption="UI interval:" Value="{Binding RefreshViewInterval}" Minimum="100" Margin="5"/>
                        <captioned:CaptionedNumericUpDown Caption="Data interval:" Value="{Binding RefreshDataInterval}" Minimum="16" Margin="5"/>
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
