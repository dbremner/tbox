<dialogs:ClosableDialogWindow x:Class="WPFControls.Dialogs.InputDateBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:WPFControls.Localization" xmlns:dialogs="clr-namespace:WPFControls.Dialogs"
                              xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned"
                              WindowStyle="SingleBorderWindow" 
             ResizeMode="NoResize"
             Height="130" Width="350"
             MinHeight="130" MinWidth="350" MaxHeight="130" 
             FocusManager.FocusedElement="{Binding ElementName=edData}" >
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <Button Name="btnOk" Content="{loc:Tr OK}" Width="64" Margin="10" Click="BtnOk_OnClick" IsDefault="True" ToolTipService.ShowOnDisabled="True"/>
            <Button Content="{loc:Tr Cancel}" Width="64" Margin="10" IsCancel="True"/>
        </StackPanel>
        <StackPanel Margin="5" VerticalAlignment="Center">
            <captioned:CaptionedDatePicker x:Name="edData" Margin="0" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </DockPanel>
</dialogs:ClosableDialogWindow>
