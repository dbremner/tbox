<Dialogs:DialogWindow x:Class="WPFControls.Dialogs.InputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Dialogs="clr-namespace:WPFControls.Dialogs" mc:Ignorable="d" 
             WindowStyle="ToolWindow" 
             Height="130" Width="350"
             MinHeight="130" MinWidth="350" MaxHeight="130" 
             FocusManager.FocusedElement="{Binding ElementName=edData}" >
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <Button Name="btnOk" Content="OK" Width="64" Margin="10" Click="BtnOk_OnClick" IsDefault="True"/>
            <Button Content="Cancel" Width="64" Margin="10" IsCancel="True"/>
        </StackPanel>
        <StackPanel Margin="5" VerticalAlignment="Center">
            <Label Name="lbCaption" Padding="0" DockPanel.Dock="Top" Content="label"/>
            <TextBox Name="edData" Margin="0" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </DockPanel>
</Dialogs:DialogWindow>
