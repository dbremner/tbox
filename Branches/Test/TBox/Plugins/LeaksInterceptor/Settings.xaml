<UserControl x:Class="LeaksInterceptor.Settings"
             xmlns:loc="clr-namespace:LeaksInterceptor.Code.Localization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:captioned="clr-namespace:WPFControls.Controls.Captioned;assembly=WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl>
        <TabItem Header="{loc:Tr ConfigureTimers}">
            <StackPanel>
                <GroupBox Header="{loc:Tr RefreshIntervals}">
                    <WrapPanel >
                        <captioned:CaptionedNumericUpDown Caption="{loc:Tr UIInterval}" Value="{Binding RefreshViewInterval}" Minimum="100" Margin="5"/>
                        <captioned:CaptionedNumericUpDown Caption="{loc:Tr DataInterval}" Value="{Binding RefreshDataInterval}" Minimum="16" Margin="5"/>
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
